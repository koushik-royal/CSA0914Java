public class ArrayIndexOutOfBoundsExample {
    public static void main(String[] args) {
        int[] arr = {1, 2, 3};

        try {
            System.out.println(arr[5]);
        } catch (ArrayIndexOutOfBoundsException e) {
            System.out.println("Accessing array element outside bounds: " + e);
        }

        try {
            for (int i = 0; i <= arr.length; i++) {
                System.out.println(arr[i]);
            }
        } catch (ArrayIndexOutOfBoundsException e) {
            System.out.println("Iterating beyond array length: " + e);
        }

        try {
            int[][] nestedArr = {{1, 2}, {3, 4}};
            System.out.println(nestedArr[1][3]);
        } catch (ArrayIndexOutOfBoundsException e) {
            System.out.println("Nested array with incorrect index: " + e);
        }

        try {
            accessArray(null);
        } catch (NullPointerException e) {
            System.out.println("Passing incorrect array to method: " + e);
        }
    }

    public static void accessArray(int[] arr) {
        System.out.println(arr[0]);
    }
}
